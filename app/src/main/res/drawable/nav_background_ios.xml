<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with subtle gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F8F9FA"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Top border - more subtle -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="0.33dp">
        <shape>
            <solid android:color="#E5E5EA" />
        </shape>
    </item>
</layer-list>

