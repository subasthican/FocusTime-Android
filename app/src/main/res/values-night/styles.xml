<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Navigation Active Indicator Style - Apple Pages (Dark Mode) -->
    <style name="NavItemActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
    </style>

    <!-- Navigation Text Styles - Apple Pages (Dark Mode) -->
    <style name="NavTextAppearanceActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_active</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavTextAppearanceInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_inactive</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
